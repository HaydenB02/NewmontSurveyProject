{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom",
        ],
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowJs": false,
        "sourceMap": true,
        "outDir": "./build",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/**/*",
    ],
    "version": "3.0.1"
}
